<?xml version="1.0" encoding="utf-8"?>


<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Musicdroid" parent="Theme.Sherlock.ForceOverflow">
        <item name="actionBarStyle">@style/Widget.Musicdroid.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Musicdroid.ActionBar</item>
    </style>

    <style name="Widget.Musicdroid.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_background</item>
        <item name="android:background">@color/actionbar_background</item>
        <item name="homeAsUpIndicator">@drawable/actionbar_ic_back</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_ic_back</item>
        <item name="titleTextStyle">@style/Widget.Musicdroid.ActionBar.Title</item>
        <item name="android:titleTextStyle">@style/Widget.Musicdroid.ActionBar.Title</item>
        <item name="height">@dimen/actionbar_height</item>
    </style>

    <style name="Widget.Musicdroid.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    

<style name="MainMenuButton">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_menu_button_background</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:drawableRight">@drawable/ic_main_menu_button_arrow</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textColor">@color/main_menu_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/main_menu_button_text_shadow_color</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">3</item>
    </style>    
</resources>