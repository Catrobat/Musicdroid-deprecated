<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.catrobat.musicdroid"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="org.catrobat.musicdroid.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.catrobat.musicdroid.RecorderActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="org.catrobat.musicdroid.preferences.PreferenceActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="org.catrobat.musicdroid.DrawTrackActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="org.catrobat.musicdroid.instruments.piano.PianoActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"></activity>
    </application>
</manifest>
