<?xml version="1.0" encoding="utf-8"?>
<at.tugraz.musicdroid.soundmixer.timeline.Timeline
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
     <View 
     android:layout_width="wrap_content"
     android:layout_height="2dp"
     android:layout_centerHorizontal="true"
     android:layout_alignParentBottom="true"
     android:background="@color/custom_background_color"
     android:id="@+id/timeline_seperator"
     />     
          
     <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"    
     android:textColor="@color/custom_background_color"
     android:layout_centerVertical="true"
     android:layout_alignParentLeft="true"
     android:id="@+id/timeline_start_time"
     />
     
     <TextView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"  
     android:textColor="@color/custom_background_color"
     android:layout_centerVertical="true"
     android:layout_alignParentRight="true" 
     android:id="@+id/timeline_end_time"
     />
     
     <ImageButton
     android:layout_width="1dp"
     android:layout_height="1dp"  
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     android:background="@color/transparent"
     android:visibility="gone"
     android:src="@drawable/timeline_start_point"
     android:id="@+id/timeline_start_point"
     />

     <ImageButton
     android:layout_width="1dp"
     android:layout_height="1dp"   
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:paddingLeft="100dp"
     android:paddingRight="100dp"
     android:background="@color/transparent"
     android:visibility="gone"
     android:src="@drawable/timeline_end_point"
     android:id="@+id/timeline_end_point"
     />
     
</at.tugraz.musicdroid.soundmixer.timeline.Timeline>