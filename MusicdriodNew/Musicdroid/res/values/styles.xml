<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.MusicdroidSplitActionBar" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:selectableItemBackground">@color/custom_background_color</item>
        <item name="android:popupMenuStyle">@style/MusicdroidPoupupMenuStyle</item>
        <item name="actionOverflowButtonStyle">@style/MusicdroidOverflowButton</item>
        <item name="android:actionOverflowButtonStyle">@style/MusicdroidOverflowButton</item>
        <item name="android:actionBarStyle">@style/MusicdroidActionBarBottomStyle</item>
        <item name="android:actionBarSplitStyle">@style/MusicdroidActionBarTopSplitStyle</item>
        <item name="android:actionBarSize">40dip</item>
    </style>  


    <style name="MusicdroidActionBarBottomStyle" parent="android:style/Widget.ActionBar">
        <item name="android:background">@color/custom_background_color</item>
    </style>

    <style name="MusicdroidActionBarTopSplitStyle" parent="android:style/Widget.ActionBar">
        <item name="android:backgroundSplit">@color/custom_background_color</item>
    </style>
    
    <style name="MusicdroidPoupupMenuStyle" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/custom_background_color</item>
    </style>
    
    <style name="MusicdroidOverflowButton" parent="@style/Widget.Sherlock.ActionButton.Overflow">
   	 <item name="android:src">@drawable/icon_menu_overflow</item>
    </style>
    
    
    <style name="CustomMusicdroidDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:linksClickable">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="customImageButton" parent="@android:style/Widget.ImageButton">
    <item name="android:background">@drawable/btn_default_transparent_custom</item>
</style>
    
</resources>
